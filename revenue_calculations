#include <stdio.h>

int main() {
    float revenue[7];
    float total = 0, average;
    int i;

    printf("Weekly Revenue Tracker \n");

    // Input revenue for each day
    for(i = 0; i < 7; i++) {
        printf("Enter revenue for day %d:              ", i + 1);
        scanf("%f", &revenue[i]);
        total += revenue[i];
     }

    // Calculation of average daily revenue
    average = total / 7;

    // Display of results
	printf("***WEEKLY REVENUE TRAKER***"); 
    printf("\nTotal Weekly Revenue: %.2f\n", total);
    printf("Average Daily Revenue: %.2f\n", average);
	
  
  return 0;
}
